{
  "name": "fd-course-exemple",
  "version": "1.0.0",
  "description": "This is a course by FD",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgress && npm run migrate:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "db": "psql --host=localhost --username=local_user --port=5432 --db=local_db ",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "npm run services:up && npm run wait-for-postgress && concurrently -n next,jest --hide next -k --success command-jest 'sleep 1; next dev' 'jest --runInBand' ",
    "test:watch": "npm run services:up && npm run wait-for-postgress && jest --watchAll --runInBand",
    "migrate:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migrate:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up ",
    "migrate:down": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development down",
    "migrate:status": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development status",
    "wait-for-postgress": "node infra/scripts/wait-for-postgress.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.4",
    "dotenv-expand": "^11.0.6",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.6.2",
    "prettier": "^2.8.8"
  }
}
